<config>
	<modules>
        <Silverstoneweb_Starrating>
            <version>1.0.0</version>
        </Silverstoneweb_Starrating>
    </modules>
    <frontend>
    	<routers>
            <starrating>
                <use>standard</use>
                <args>
                    <module>Silverstoneweb_Starrating</module>
                    <frontName>starrating</frontName>
                </args>
            </starrating>
        </routers>
        <layout>
            <updates>
                <starrating>
                    <file>starrating.xml</file>
                </starrating>
            </updates>
        </layout>
    </frontend>
    <global>
    	<blocks>
    		<starrating>
                <class>Silverstoneweb_Starrating_Block</class>
            </starrating> 
    		<review>
    			<rewrite>
    				<form>Silverstoneweb_Starrating_Block_Form</form>
    			</rewrite>
    		</review>
    	</blocks>
    </global>
</config>